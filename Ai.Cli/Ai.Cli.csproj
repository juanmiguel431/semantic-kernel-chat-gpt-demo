<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.Hosting" Version="8.0.1"/>
        <PackageReference Include="Microsoft.SemanticKernel" Version="1.22.0"/>
        <PackageReference Include="Microsoft.SemanticKernel.Agents.Abstractions" Version="1.24.0-alpha" />
        <PackageReference Include="Microsoft.SemanticKernel.Agents.Core" Version="1.24.0-alpha" />
        <PackageReference Include="Microsoft.SemanticKernel.Agents.OpenAI" Version="1.24.0-alpha" />
    </ItemGroup>

    <ItemGroup>
      <None Update="appsettings.json">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </None>
    </ItemGroup>

</Project>
